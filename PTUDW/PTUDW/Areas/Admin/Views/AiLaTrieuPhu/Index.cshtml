    </div>
    <a style="position: fixed; top: 20px; left: 20px; background-color: white; color: black; text-decoration:none; padding: 12px; border-radius: 5px; font-size: 16px;" href="@Url.Action("Index","Dashboard")" class="btn-sm btn-info"><i class="fa fa-long-arrow-alt-left"> Quay lại</i></a>

    <script src="~/Scripts/AiLaTrieuPhu/jquery-3.5.1.min.js"></script>
