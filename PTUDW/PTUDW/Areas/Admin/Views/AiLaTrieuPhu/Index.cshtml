
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ai là triệu phú</title>
    <link rel="stylesheet" href="~/Public/css/AiLaTrieuPhu/index.css" />
</head>

<body>
    <div class="container">
        <div class="logo">
            <img src="~/Public/img/AiLaTrieuPhu/logo-clip.png" alt="Logo Game" />
        </div>
        <div class="welcom">
            <h3>Chào mừng bạn đến với game</h3>
            <h2>AI LÀ TRIỆU PHÚ</h2>
        </div>
        <div class="wrap-btn">
            <a href="@Url.Action("PlayGame","AiLaTrieuPhu")" class="btn" id="btn-play">Chơi</a>
